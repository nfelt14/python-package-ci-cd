{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "dependencyDashboard": true,
    "extends": [
        "config:best-practices",
        "group:githubArtifactActions",
        ":separatePatchReleases"
    ],
    "ignoreDeps": [
        "tektronix/python-package-ci-cd"
    ],
    "packageRules": [
        {
            "enabled": false,
            "matchDepNames": [
                "*",
                "!python"
            ]
        },
        {
            "additionalBranchPrefix": "python-version/",
            "commitMessageSuffix": " in all dependant actions",
            "description": "Group together all Python (official) version updates",
            "groupName": "python dependencies",
            "matchManagers": [
                "dockerfile",
                "poetry",
                "pip_requirements"
            ],
            "matchPackageNames": [
                "python"
            ],
            "semanticCommitScope": "python-version"
        }
    ],
    "platformCommit": "enabled",
    "prHourlyLimit": 5
}
